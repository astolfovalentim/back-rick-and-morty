{
  "openapi": "3.0.0",
  "info": {
    "title": "API Rick and Morty",
    "description": "API para CRUD das personagens da Série Rick and Morty",
    "termsOfService": "",
    "contact": {
      "email": "contato@astolfovalentim.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://mod3-back-rickandmorty.onrender.com/characters",
      "description": "API de produção Render"
    },

    {
      "url": "http://localhost:3000/characters",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/characters": {
      "get": {
        "summary": "Buscar todas as personagens",
        "description": "Rota responsável por por buscar todas as personagens",
        "tags": ["Characters"],
        "responses": {
          "404": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Characters"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/characters/find/{id}": {
      "get": {
        "summary": "Busca uma personagem pelo ID",
        "description": "Rota responsável por buscar uma personagem pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da personagem para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters/create": {
      "post": {
        "summary": "Cadastrar uma personagem",
        "description": "Rota responsável por cadastrar uma personagem",
        "tags": ["Characters"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Characters"
              },
              "examples": {
                "Paletas": {
                  "value": {
                    "name": "Beth Smith",
                    "imagem": "https://rickandmortyapi.com/api/character/avatar/39.jpeg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters/update/{id}": {
      "put": {
        "summary": "Editar uma personagem pelo ID",
        "description": "Rota responsável por editar uma personagem pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da personagem para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Characters"
              },
              "examples": {
                "Paletas": {
                  "value": {
                    "name": "Beth Smith EDITADO",
                    "imagem": "https://rickandmortyapi.com/api/character/avatar/39.jpeg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters/delete/{id}": {
      "delete": {
        "summary": "Apagar uma personagem pelo ID",
        "description": "Rota responsável por apagar uma personagem pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da personagem para deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Characters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "imagem": {
            "type": "string"
          }
        }
      }
    }
  }
}
